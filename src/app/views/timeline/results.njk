{% extends 'layout.njk' %}

{% set pageName='Company results' %}

{% block page_content %}

	<h1 class="page-heading">
		{% if name %}
		Company name: {{ name }}
		{% endif %}

		{% if id %}
		Companies house id: {{ id }}
		{% endif %}
	</h1>

	<h2 class="company-timeline-heading">Company Timeline</h2>

	<table class="timeline-table">
		<caption class="visually-hidden">Events for company</caption>
		<thead>
			<tr>
				<th>Date</th>
				<th>Source</th>
				<th>Description</th>
			</tr>
		</thead>
		<tbody>
		{% for event in json.events %}
			<tr>
				<td class="timeline-table_cell timeline-table--date">{{ event.datetime | dateOnly }}</td>
				<td class="timeline-table_cell timeline-table--source">{{ event.source }}</td>
				<td class="timeline-table_cell timeline-table--description">{{ event.description }}</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>
{% endblock %}